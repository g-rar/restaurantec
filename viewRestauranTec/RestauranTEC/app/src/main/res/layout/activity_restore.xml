<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202732">

        <TextView
            android:id="@+id/txtRestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Restaurar"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/edTxtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_marginTop="100dp"
            android:textColorHint="#80FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/txtRestore"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            />

        <Button
            android:id="@+id/btnRestore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edTxtEmail"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Restaurar ContraseÃ±a"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded"
            android:onClick="restorePassword"/>

        <TextView
            android:id="@+id/txtNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRestore"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>