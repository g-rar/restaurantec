<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202732">

        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Registro"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/edTxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:layout_marginTop="100dp"
            android:textColorHint="#80FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/txtRegister"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/eTxtAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edTxtName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="#80FFFFFF"
            android:textColor="#FFFFFF"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:backgroundTint="@color/colorPrimary"/>

        <EditText
            android:id="@+id/edTxtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:layout_marginTop="20dp"
            android:textColorHint="#80FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/eTxtAp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/eTxtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edTxtEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textColorHint="#80FFFFFF"
            android:textColor="#FFFFFF"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eTxtPass"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Registrar"
            android:textColor="#FFFFFF"
            android:onClick="register"
            android:background="@drawable/button_rounded" />

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/facebook"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnRegister"
            android:layout_marginTop="30dp"
            android:onClick="onClickFacebookButton"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>