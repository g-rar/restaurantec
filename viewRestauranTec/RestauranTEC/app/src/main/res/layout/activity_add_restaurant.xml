<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollAddRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202732"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:text="Nombre:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="20dp"
            android:layout_marginTop="43dp"
            android:layout_toEndOf="@+id/textView"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="42dp"
            android:text="Teléfono:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="43dp"
            android:layout_toEndOf="@+id/textView"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="42dp"
            android:text="Horario:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginStart="20dp"
            android:layout_marginTop="43dp"
            android:layout_toEndOf="@+id/textView"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginStart="114dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/textView7"
            android:text="Tipo de comida"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="114dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textView7" />

        <RadioGroup
            android:id="@+id/rGroupPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imgDolar1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/rGroupPrecio"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rGroupPrecio"
            android:src="@drawable/dollar"/>

        <ImageView
            android:id="@+id/imgDolar2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imgDolar1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rGroupPrecio"
            android:src="@drawable/dollar"/>

        <ImageView
            android:id="@+id/imgDolar3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imgDolar1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imgDolar2"
            android:src="@drawable/dollar"/>

        <ImageView
            android:id="@+id/imgDolar4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imgDolar3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rGroupPrecio"
            android:src="@drawable/dollar"/>

        <ImageView
            android:id="@+id/imgDolar5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imgDolar3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imgDolar4"
            android:src="@drawable/dollar"/>

        <ImageView
            android:id="@+id/imgDolar6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imgDolar3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imgDolar5"
            android:src="@drawable/dollar"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:text="Precio:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Nuevo Restaurante"
            android:textSize="30sp" />

        <fragment
            android:id="@+id/mapAdd"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:tag="MapaP" />

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapAdd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_rounded"
            android:text="Agregar"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDolar6"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="Ubicación" />


    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>